@model SSMS.Models.Mark
<link href="~/css/marks/details.css" rel="stylesheet" />
@{
    ViewData["Title"] = "Mark Details";
}

<div class="page-container" id="detailsMarkPage">
    <h1 class="page-title">Mark Details</h1>
    <h2 class="section-title">Mark Information</h2>
    <hr />

    <dl class="details-group">
        <dt class="details-label">@Html.DisplayNameFor(model => model.Marks)</dt>
        <dd class="details-value">@Html.DisplayFor(model => model.Marks)</dd>

        <dt class="details-label">@Html.DisplayNameFor(model => model.Class)</dt>
        <dd class="details-value">@Html.DisplayFor(model => model.Class.ClassNameArabic)</dd>

        <dt class="details-label">@Html.DisplayNameFor(model => model.Material)</dt>
        <dd class="details-value">@Html.DisplayFor(model => model.Material.MaterialNameArabic)</dd>

        <dt class="details-label">@Html.DisplayNameFor(model => model.Student)</dt>
        <dd class="details-value">@Html.DisplayFor(model => model.Student.FullNameEnglish)</dd>
    </dl>

    <div class="action-buttons">
        <a asp-action="Edit"
           asp-route-studentId="@Model.StudentId"
           asp-route-classId="@Model.ClassId"
           asp-route-materialId="@Model.MaterialId"
           class="btn btn-primary"
           id="editBtn">Edit</a>
        <a asp-action="Index" class="btn btn-secondary" id="backLink">Back to List</a>
    </div>
</div>
