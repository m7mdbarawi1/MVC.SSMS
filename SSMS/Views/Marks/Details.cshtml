@model SSMS.Models.Mark

@{
    ViewData["Title"] = "Details";
}

<div class="page-container">
    <h1 class="section-title">Mark Details</h1>

    <div class="details-group">
        <h4 class="form-subtitle">Mark</h4>
        <hr class="divider" />

        <dl class="details-list">
            <dt class="details-label">@Html.DisplayNameFor(model => model.Mark1)</dt>
            <dd class="details-value">@Html.DisplayFor(model => model.Mark1)</dd>

            <dt class="details-label">@Html.DisplayNameFor(model => model.Class)</dt>
            <dd class="details-value">@Html.DisplayFor(model => model.Class.ClassId)</dd>

            <dt class="details-label">@Html.DisplayNameFor(model => model.Material)</dt>
            <dd class="details-value">@Html.DisplayFor(model => model.Material.MaterialId)</dd>

            <dt class="details-label">@Html.DisplayNameFor(model => model.Student)</dt>
            <dd class="details-value">@Html.DisplayFor(model => model.Student.StudentId)</dd>
        </dl>
    </div>

    <div class="form-actions">
        @Html.ActionLink("Edit", "Edit", new
            {
                studentId = Model.StudentId,
                classId = Model.ClassId,
                materialId = Model.MaterialId
            }, new { @class = "btn btn-primary" })

        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>
