@model SSMS.Models.Mark

@{
    ViewData["Title"] = "Create";
}

<div class="page-container">
    <h1 class="section-title">Create Mark</h1>
    <h4 class="form-subtitle">Mark Details</h4>
    <hr class="divider" />

    <form asp-action="Create" class="form-container">
        <div asp-validation-summary="ModelOnly" class="validation-summary"></div>

        <div class="form-group">
            <label asp-for="StudentId" class="form-label"></label>
            <select asp-for="StudentId" asp-items="ViewBag.StudentId" class="input-field"></select>
            <span asp-validation-for="StudentId" class="validation-message"></span>
        </div>

        <div class="form-group">
            <label asp-for="ClassId" class="form-label"></label>
            <select asp-for="ClassId" asp-items="ViewBag.ClassId" class="input-field"></select>
            <span asp-validation-for="ClassId" class="validation-message"></span>
        </div>

        <div class="form-group">
            <label asp-for="MaterialId" class="form-label"></label>
            <select asp-for="MaterialId" asp-items="ViewBag.MaterialId" class="input-field"></select>
            <span asp-validation-for="MaterialId" class="validation-message"></span>
        </div>

        <div class="form-group">
            <label asp-for="Mark1" class="form-label"></label>
            <input asp-for="Mark1" class="input-field" />
            <span asp-validation-for="Mark1" class="validation-message"></span>
        </div>

        <div class="form-actions">
            <input type="submit" value="Create" class="btn btn-primary" />
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </form>
</div>

@{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
