@model SSMS.Models.Mark
<link href="~/css/marks/create.css" rel="stylesheet" />
@{
    ViewData["Title"] = "Create Mark";
}

<main class="page-container">
    <h1 class="section-title">Create Mark</h1>
    <h2 class="form-subtitle">Mark Details</h2>
    <hr />

    <form asp-action="Create" class="form-section">
        <div asp-validation-summary="ModelOnly" class="validation-summary"></div>

        <div class="form-group">
            <label asp-for="StudentId" class="form-label"></label>
            <select asp-for="StudentId" asp-items="ViewBag.StudentId" class="form-select"></select>
            <span asp-validation-for="StudentId" class="validation-message"></span>
        </div>

        <div class="form-group">
            <label asp-for="ClassId" class="form-label"></label>
            <select asp-for="ClassId" asp-items="ViewBag.ClassId" class="form-select"></select>
            <span asp-validation-for="ClassId" class="validation-message"></span>
        </div>

        <div class="form-group">
            <label asp-for="MaterialId" class="form-label"></label>
            <select asp-for="MaterialId" asp-items="ViewBag.MaterialId" class="form-select"></select>
            <span asp-validation-for="MaterialId" class="validation-message"></span>
        </div>

        <div class="form-group">
            <label asp-for="Marks" class="form-label"></label>
            <input asp-for="Marks" class="form-input" />
            <span asp-validation-for="Marks" class="validation-message"></span>
        </div>

        <div class="form-actions">
            <input type="submit" value="Create" class="btn btn-primary" />
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </form>
</main>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
