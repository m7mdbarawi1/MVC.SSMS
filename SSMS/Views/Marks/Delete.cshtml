@model SSMS.Models.Mark
<link href="~/css/marks/delete.css" rel="stylesheet" />
@{
    ViewData["Title"] = "Delete Mark";
}

<div class="page-container">
    <h1 class="page-title">Delete Mark</h1>
    <h3 class="page-subtitle">Are you sure you want to delete this mark?</h3>

    <section class="details-section">
        <h4 class="section-heading">Mark Information</h4>
        <hr />
        <dl class="details-group">
            <dt>@Html.DisplayNameFor(model => model.Mark1)</dt>
            <dd>@Html.DisplayFor(model => model.Mark1)</dd>

            <dt>@Html.DisplayNameFor(model => model.Class)</dt>
            <dd>@Html.DisplayFor(model => model.Class.ClassId)</dd>

            <dt>@Html.DisplayNameFor(model => model.Material)</dt>
            <dd>@Html.DisplayFor(model => model.Material.MaterialId)</dd>

            <dt>@Html.DisplayNameFor(model => model.Student)</dt>
            <dd>@Html.DisplayFor(model => model.Student.StudentId)</dd>
        </dl>
    </section>

    <form asp-action="Delete">
        <input type="hidden" asp-for="StudentId" />
        <input type="hidden" asp-for="ClassId" />
        <input type="hidden" asp-for="MaterialId" />

        <div class="form-actions">
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </form>
</div>
