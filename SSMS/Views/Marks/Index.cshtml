@model IEnumerable<SSMS.Models.Mark>

@{
    ViewData["Title"] = "Marks";
}

<main>
    <h1>Marks</h1>

    <div>
        <a asp-action="Create">Create New</a>
    </div>

    <div>
        <input type="text" placeholder="Search by mark, class, material, or student ID..." />
    </div>

    <table>
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Mark1)</th>
                <th>@Html.DisplayNameFor(model => model.Class)</th>
                <th>@Html.DisplayNameFor(model => model.Material)</th>
                <th>@Html.DisplayNameFor(model => model.Student)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(m => item.Mark1)</td>
                    <td>@Html.DisplayFor(m => item.Class.ClassNameArabic)</td>
                    <td>@Html.DisplayFor(m => item.Material.MaterialNameArabic)</td>
                    <td>@Html.DisplayFor(m => item.Student.StudentId)</td>
                    <td>
                        <a asp-action="Edit" asp-route-studentId="@item.StudentId" asp-route-classId="@item.ClassId" asp-route-materialId="@item.MaterialId">Edit</a>
                        <a asp-action="Details" asp-route-studentId="@item.StudentId" asp-route-classId="@item.ClassId" asp-route-materialId="@item.MaterialId">Details</a>
                        <a asp-action="Delete" asp-route-studentId="@item.StudentId" asp-route-classId="@item.ClassId" asp-route-materialId="@item.MaterialId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</main>

@section Scripts {
    <script>
        document.querySelector("input[type='text']").addEventListener("keyup", function () {
            const filter = this.value.toLowerCase();
            const rows = document.querySelectorAll("table tbody tr");

            rows.forEach(row => {
                const values = Array.from(row.cells).map(cell => cell.textContent.toLowerCase());
                const match = values.some(val => val.includes(filter));
                row.style.display = match ? "" : "none";
            });
        });
    </script>
}
