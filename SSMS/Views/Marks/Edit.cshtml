@model SSMS.Models.Mark

@{
    ViewData["Title"] = "Edit";
}

<div class="page-container">
    <h1 class="section-title">Edit</h1>
    <h4 class="form-subtitle">Mark</h4>
    <hr class="divider" />

    <form asp-action="Edit" class="form">
        <div asp-validation-summary="ModelOnly" class="validation-summary"></div>

        <input type="hidden" asp-for="StudentId" />
        <input type="hidden" asp-for="ClassId" />
        <input type="hidden" asp-for="MaterialId" />

        <div class="form-group">
            <label asp-for="Mark1" class="form-label"></label>
            <input asp-for="Mark1" class="input-field" />
            <span asp-validation-for="Mark1" class="form-validation"></span>
        </div>

        <div class="form-actions">
            <input type="submit" value="Save" class="btn btn-primary" />
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </form>
</div>

@{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
