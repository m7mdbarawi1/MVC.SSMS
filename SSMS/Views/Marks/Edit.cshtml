@model SSMS.Models.Mark

@{
    ViewData["Title"] = "Edit Mark";
}

<main class="page-container" id="editMarkPage">
    <h1 class="page-title">Edit</h1>
    <h2 class="section-title">Mark</h2>
    <hr />

    <form asp-action="Edit" class="form-container" id="markForm">
        <div asp-validation-summary="ModelOnly" class="form-error"></div>

        <input type="hidden" asp-for="StudentId" />
        <input type="hidden" asp-for="ClassId" />
        <input type="hidden" asp-for="MaterialId" />

        <div class="form-group">
            <label asp-for="Mark1" class="form-label"></label>
            <input asp-for="Mark1" class="form-input" id="markInput" />
            <span asp-validation-for="Mark1" class="form-error"></span>
        </div>

        <div class="action-buttons">
            <input type="submit" value="Save" class="btn btn-primary" id="saveBtn" />
            <a asp-action="Index" class="btn btn-secondary back-link" id="backLink">Back to List</a>
        </div>
    </form>
</main>

@{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
