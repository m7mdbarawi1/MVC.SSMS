@model SSMS.Models.Student

@{
    ViewData["Title"] = "Create Student";
}

<div class="page-container">
    <h1 class="section-title">Create New Student</h1>
    <h4 class="section-subtitle">Student Details</h4>
    <hr />

    <form asp-action="Create" class="form">
        <div asp-validation-summary="ModelOnly" class="validation-summary text-danger"></div>

        <div class="form-group">
            <label asp-for="StudentId" class="form-label"></label>
            <input asp-for="StudentId" class="input-field" />
            <span asp-validation-for="StudentId" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="ClassId" class="form-label"></label>
            <select asp-for="ClassId" asp-items="ViewBag.ClassId" class="input-field"></select>
            <span asp-validation-for="ClassId" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="UserId" class="form-label"></label>
            <select asp-for="UserId" asp-items="ViewBag.UserId" class="input-field"></select>
            <span asp-validation-for="UserId" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Gender" class="form-label"></label>
            <input asp-for="Gender" class="input-field" />
            <span asp-validation-for="Gender" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="FullNameArabic" class="form-label"></label>
            <input asp-for="FullNameArabic" class="input-field arabic-text" />
            <span asp-validation-for="FullNameArabic" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="FullNameEnglish" class="form-label"></label>
            <input asp-for="FullNameEnglish" class="input-field" />
            <span asp-validation-for="FullNameEnglish" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Age" class="form-label"></label>
            <input asp-for="Age" class="input-field" />
            <span asp-validation-for="Age" class="text-danger"></span>
        </div>

        <div class="form-actions">
            <input type="submit" value="Create" class="btn btn-primary" />
            <a asp-action="Index" class="btn btn-outline">Back to List</a>
        </div>
    </form>
</div>

@{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
