@model SSMS.Models.Student
<link href="~/css/students/delete.css" rel="stylesheet" />
@{
    ViewData["Title"] = "Delete Student";
}

<div class="page-container">
    <h1 class="page-title">Delete Student</h1>
    <h3 class="page-subtitle">Are you sure you want to delete this student?</h3>

    <section class="details-section">
        <h4 class="section-heading">Student Details</h4>
        <hr />
        <dl class="details-group">
            <dt>@Html.DisplayNameFor(model => model.Gender)</dt>
            <dd>@Html.DisplayFor(model => model.Gender)</dd>

            <dt>@Html.DisplayNameFor(model => model.FullNameArabic)</dt>
            <dd>@Html.DisplayFor(model => model.FullNameArabic)</dd>

            <dt>@Html.DisplayNameFor(model => model.FullNameEnglish)</dt>
            <dd>@Html.DisplayFor(model => model.FullNameEnglish)</dd>

            <dt>@Html.DisplayNameFor(model => model.Age)</dt>
            <dd>@Html.DisplayFor(model => model.Age)</dd>

            <dt>@Html.DisplayNameFor(model => model.Class)</dt>
            <dd>@Html.DisplayFor(model => model.Class.ClassId)</dd>

            <dt>@Html.DisplayNameFor(model => model.User)</dt>
            <dd>@Html.DisplayFor(model => model.User.UserId)</dd>
        </dl>
    </section>

    <form asp-action="Delete">
        <input type="hidden" asp-for="StudentId" />
        <div class="form-actions">
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </form>
</div>
