@model SSMS.Models.Student
<link href="~/css/students/details.css" rel="stylesheet" />
@{
    ViewData["Title"] = "Student Details";
}

<div class="page-container" id="detailsStudentPage">
    <h1 class="page-title">Student Details</h1>
    <h2 class="section-title">Student</h2>
    <hr />

    <dl class="details-group">
        <dt class="details-label">@Html.DisplayNameFor(model => model.Gender)</dt>
        <dd class="details-value">@Html.DisplayFor(model => model.Gender)</dd>

        <dt class="details-label">@Html.DisplayNameFor(model => model.FullNameArabic)</dt>
        <dd class="details-value">@Html.DisplayFor(model => model.FullNameArabic)</dd>

        <dt class="details-label">@Html.DisplayNameFor(model => model.FullNameEnglish)</dt>
        <dd class="details-value">@Html.DisplayFor(model => model.FullNameEnglish)</dd>

        <dt class="details-label">@Html.DisplayNameFor(model => model.Age)</dt>
        <dd class="details-value">@Html.DisplayFor(model => model.Age)</dd>

        <dt class="details-label">@Html.DisplayNameFor(model => model.Class)</dt>
        <dd class="details-value">@Html.DisplayFor(model => model.Class.ClassNameArabic)</dd>

        <dt class="details-label">@Html.DisplayNameFor(model => model.User)</dt>
        <dd class="details-value">@Html.DisplayFor(model => model.User.FullName)</dd>
    </dl>

    <div class="action-buttons">
        <a asp-action="Edit" asp-route-id="@Model?.StudentId" class="btn btn-primary" id="editBtn">Edit</a>
        <a asp-action="Index" class="btn btn-secondary" id="backLink">Back to List</a>
    </div>
</div>
