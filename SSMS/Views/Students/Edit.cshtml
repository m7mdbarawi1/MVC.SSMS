@model SSMS.Models.Student
<link href="~/css/students/edit.css" rel="stylesheet" />
@{
    ViewData["Title"] = "Edit Student";
}

<main class="page-container" id="editStudentPage">
    <h1 class="page-title">Edit Student</h1>
    <h2 class="section-title">Student Details</h2>
    <hr />

    <form asp-action="Edit" class="form-container" id="studentForm">
        <div asp-validation-summary="ModelOnly" class="validation-summary"></div>
        <input type="hidden" asp-for="StudentId" />

        <!-- Class Selection -->
        <div class="form-group">
            <label asp-for="ClassId" class="form-label"></label>
            <select asp-for="ClassId" asp-items="ViewBag.ClassId" class="form-select"></select>
            <span asp-validation-for="ClassId" class="validation-message"></span>
        </div>

        <!-- User Selection -->
        <div class="form-group">
            <label asp-for="UserId" class="form-label"></label>
            <select asp-for="UserId" asp-items="ViewBag.UserId" class="form-select"></select>
            <span asp-validation-for="UserId" class="validation-message"></span>
        </div>

        <!-- Gender -->
        <div class="form-group">
            <label asp-for="Gender" class="form-label"></label>
            <select asp-for="Gender" class="form-select">
                <option value="">-- Select Gender --</option>
                <option value="1">Male</option>
                <option value="0">Female</option>
            </select>
            <span asp-validation-for="Gender" class="validation-message"></span>
        </div>

        <!-- Arabic Full Name -->
        <div class="form-group">
            <label asp-for="FullNameArabic" class="form-label"></label>
            <input asp-for="FullNameArabic"
                   class="form-input"
                   pattern="[ء-ي\s]+"
                   title="Please enter only Arabic letters and spaces" />
            <span asp-validation-for="FullNameArabic" class="validation-message"></span>
        </div>

        <!-- English Full Name -->
        <div class="form-group">
            <label asp-for="FullNameEnglish" class="form-label"></label>
            <input asp-for="FullNameEnglish"
                   class="form-input"
                   pattern="[A-Za-z ]+"
                   title="Please enter only English letters and spaces" />
            <span asp-validation-for="FullNameEnglish" class="validation-message"></span>
        </div>

        <!-- Age -->
        <div class="form-group">
            <label asp-for="Age" class="form-label"></label>
            <input asp-for="Age" class="form-input" min="6" max="18" type="number" />
            <span asp-validation-for="Age" class="validation-message"></span>
        </div>

        <!-- Actions -->
        <div class="form-actions">
            <input type="submit" value="Save" class="btn btn-primary" />
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </form>
</main>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
