@{
    ViewData["Title"] = "Home Page";
}
<link href="~/css/home/index.css" rel="stylesheet" />
<div class="home-container">
    <!-- Section 1: Welcome Banner -->
    <section class="welcome-section">
        <h1 class="display-4">🎓 Welcome to SSMS</h1>
        <p>Your trusted Simple School Management System for students, teachers, and administration.</p>
    </section>

    <!-- Section 2: System Features -->
    <section class="features-section">
        <h2>💡 Key Features</h2>
        <ul>
            <li>📚 Manage Classes, Students, Teachers, and Materials</li>
            <li>📝 Track Student Marks and Progress</li>
            <li>🔐 Secure Role-Based Access (Admin, Teacher, Student)</li>
            <li>📊 Organized Interface for Smooth Navigation</li>
        </ul>
    </section>

    <!-- Section 3: About the System -->
    <section class="about-section">
        <h2>📘 About SSMS</h2>
        <p>
            SSMS is built using ASP.NET Core MVC and SQL Server. It provides an efficient way to manage school operations,
            allowing administrators to control data flow, teachers to input marks, and students to view their performance.
        </p>
    </section>

    <!-- Section 4: Contact or Call to Action -->
    <section class="contact-section">
        <h2>📞 Get in Touch</h2>
        <p>Have questions or want a demo? Contact the admin team at <a href="mailto:info@ssms.com">info@ssms.com</a></p>
    </section>
</div>
