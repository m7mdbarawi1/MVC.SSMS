@model SSMS.Models.Material

@{
    ViewData["Title"] = "Delete Material";
}

<div class="page-container">
    <h1 class="section-title">Delete Material</h1>
    <p class="warning-text">Are you sure you want to delete this?</p>

    <div class="card">
        <h4 class="section-subtitle">Material Details</h4>
        <hr class="divider" />

        <dl class="detail-list">
            <dt class="detail-term">@Html.DisplayNameFor(model => model.MaterialNameArabic)</dt>
            <dd class="detail-description">@Html.DisplayFor(model => model.MaterialNameArabic)</dd>

            <dt class="detail-term">@Html.DisplayNameFor(model => model.MaterialNameEnglish)</dt>
            <dd class="detail-description">@Html.DisplayFor(model => model.MaterialNameEnglish)</dd>
        </dl>
    </div>

    <form asp-action="Delete" class="form-actions">
        <input type="hidden" asp-for="MaterialId" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>
