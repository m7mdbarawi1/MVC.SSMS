@model SSMS.Models.Material

@{
    ViewData["Title"] = "Delete Material";
}

<div class="page-container">
    <h1 class="page-title">Delete Material</h1>
    <h3 class="page-subtitle">Are you sure you want to delete this material?</h3>

    <section class="details-section">
        <h4 class="section-heading">Material Details</h4>
        <hr />
        <dl class="details-group">
            <dt>@Html.DisplayNameFor(model => model.MaterialNameArabic)</dt>
            <dd>@Html.DisplayFor(model => model.MaterialNameArabic)</dd>

            <dt>@Html.DisplayNameFor(model => model.MaterialNameEnglish)</dt>
            <dd>@Html.DisplayFor(model => model.MaterialNameEnglish)</dd>
        </dl>
    </section>

    <form asp-action="Delete">
        <input type="hidden" asp-for="MaterialId" />
        <div class="form-actions">
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </form>
</div>
