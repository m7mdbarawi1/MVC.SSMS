@model SSMS.Models.Material
<link href="~/css/materials/create.css" rel="stylesheet" />
@{
    ViewData["Title"] = "Create Material";
}

<main class="page-container">
    <h1 class="section-title">Create New Material</h1>
    <h2 class="form-subtitle">Material Details</h2>
    <hr />

    <form asp-action="Create" class="form-section">
        <div asp-validation-summary="ModelOnly" class="validation-summary"></div>

        <!-- Arabic Material Name -->
        <div class="form-group">
            <label asp-for="MaterialNameArabic" class="form-label"></label>
            <input asp-for="MaterialNameArabic"
                   class="form-input"
                   pattern="[ء-ي\s]+"
                   title="Please enter only Arabic letters and spaces" />
            <span asp-validation-for="MaterialNameArabic" class="validation-message"></span>
        </div>

        <!-- English Material Name -->
        <div class="form-group">
            <label asp-for="MaterialNameEnglish" class="form-label"></label>
            <input asp-for="MaterialNameEnglish"
                   class="form-input"
                   pattern="[A-Za-z ]+"
                   title="Please enter only English letters and spaces" />
            <span asp-validation-for="MaterialNameEnglish" class="validation-message"></span>
        </div>

        <div class="form-actions">
            <input type="submit" value="Create" class="btn btn-primary" />
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </form>
</main>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
