@model SSMS.Models.Material

@{
    ViewData["Title"] = "Edit Material";
}

<main>
    <h1>Edit Material</h1>
    <h2>Material Details</h2>
    <hr />

    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly"></div>
        <input type="hidden" asp-for="MaterialId" />

        <div>
            <label asp-for="MaterialNameArabic"></label>
            <input asp-for="MaterialNameArabic" />
            <span asp-validation-for="MaterialNameArabic"></span>
        </div>

        <div>
            <label asp-for="MaterialNameEnglish"></label>
            <input asp-for="MaterialNameEnglish" />
            <span asp-validation-for="MaterialNameEnglish"></span>
        </div>

        <div>
            <input type="submit" value="Save" />
            <a asp-action="Index">Back to List</a>
        </div>
    </form>
</main>

@{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
