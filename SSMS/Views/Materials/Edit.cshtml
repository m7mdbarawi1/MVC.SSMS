@model SSMS.Models.Material

@{
    ViewData["Title"] = "Edit Material";
}

<div class="page-container">
    <h1 class="section-title">Edit Material</h1>
    <h4 class="section-subtitle">Material Details</h4>
    <hr />

    <form asp-action="Edit" class="form-container">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="MaterialId" />

        <div class="form-group">
            <label asp-for="MaterialNameArabic" class="form-label"></label>
            <input asp-for="MaterialNameArabic" class="input-field" />
            <span asp-validation-for="MaterialNameArabic" class="field-validation-error"></span>
        </div>

        <div class="form-group">
            <label asp-for="MaterialNameEnglish" class="form-label"></label>
            <input asp-for="MaterialNameEnglish" class="input-field" />
            <span asp-validation-for="MaterialNameEnglish" class="field-validation-error"></span>
        </div>

        <div class="form-actions">
            <input type="submit" value="Save" class="btn btn-primary" />
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </form>
</div>

@{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
