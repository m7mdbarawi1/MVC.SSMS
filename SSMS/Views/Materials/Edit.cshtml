@model SSMS.Models.Material

@{
    ViewData["Title"] = "Edit Material";
}

<main class="page-container" id="editMaterialPage">
    <h1 class="page-title">Edit Material</h1>
    <h2 class="section-title">Material Details</h2>
    <hr />

    <form asp-action="Edit" class="form-container" id="materialForm">
        <div asp-validation-summary="ModelOnly" class="form-error"></div>
        <input type="hidden" asp-for="MaterialId" />

        <div class="form-group">
            <label asp-for="MaterialNameArabic" class="form-label"></label>
            <input asp-for="MaterialNameArabic" class="form-input" id="materialNameArabicInput" />
            <span asp-validation-for="MaterialNameArabic" class="form-error"></span>
        </div>

        <div class="form-group">
            <label asp-for="MaterialNameEnglish" class="form-label"></label>
            <input asp-for="MaterialNameEnglish" class="form-input" id="materialNameEnglishInput" />
            <span asp-validation-for="MaterialNameEnglish" class="form-error"></span>
        </div>

        <div class="action-buttons">
            <input type="submit" value="Save" class="btn btn-primary" id="saveBtn" />
            <a asp-action="Index" class="btn btn-secondary back-link" id="backLink">Back to List</a>
        </div>
    </form>
</main>

@{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
