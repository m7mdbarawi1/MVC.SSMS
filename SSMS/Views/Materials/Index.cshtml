@model IEnumerable<SSMS.Models.Material>

@{
    ViewData["Title"] = "Materials";
}

<div class="page-container">
    <h1 class="section-title">Materials</h1>

    <div class="action-bar">
        <a asp-action="Create" class="btn btn-primary">Create New</a>
    </div>

    <input type="text" id="materialSearchInput" class="input-field search-bar" placeholder="Search by Arabic or English material name..." />

    <table class="data-table">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.MaterialNameArabic)</th>
                <th>@Html.DisplayNameFor(model => model.MaterialNameEnglish)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.MaterialNameArabic)</td>
                    <td>@Html.DisplayFor(modelItem => item.MaterialNameEnglish)</td>
                    <td>
                        <div class="table-actions">
                            <a asp-action="Edit" asp-route-id="@item.MaterialId" class="btn btn-sm">Edit</a>
                            <a asp-action="Details" asp-route-id="@item.MaterialId" class="btn btn-sm">Details</a>
                            <a asp-action="Delete" asp-route-id="@item.MaterialId" class="btn btn-sm btn-danger">Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <script>
        document.getElementById("materialSearchInput").addEventListener("keyup", function () {
            const filter = this.value.toLowerCase();
            const rows = document.querySelectorAll(".data-table tbody tr");

            rows.forEach(row => {
                const arabic = row.cells[0].textContent.toLowerCase();
                const english = row.cells[1].textContent.toLowerCase();
                row.style.display = arabic.includes(filter) || english.includes(filter) ? "" : "none";
            });
        });
    </script>
}
