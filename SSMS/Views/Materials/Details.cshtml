@model SSMS.Models.Material

@{
    ViewData["Title"] = "Material Details";
}

<div class="page-container">
    <h1 class="section-title">Material Details</h1>

    <div class="card">
        <h4 class="section-subtitle">Material Information</h4>
        <hr class="divider" />

        <dl class="detail-list">
            <dt class="detail-term">@Html.DisplayNameFor(model => model.MaterialNameArabic)</dt>
            <dd class="detail-description">@Html.DisplayFor(model => model.MaterialNameArabic)</dd>

            <dt class="detail-term">@Html.DisplayNameFor(model => model.MaterialNameEnglish)</dt>
            <dd class="detail-description">@Html.DisplayFor(model => model.MaterialNameEnglish)</dd>
        </dl>
    </div>

    <div class="form-actions">
        <a asp-action="Edit" asp-route-id="@Model?.MaterialId" class="btn btn-primary">Edit</a>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>