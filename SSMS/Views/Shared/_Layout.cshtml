@using Microsoft.AspNetCore.Authorization
@using System.Security.Claims
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SSMS</title>
    <link href="~/css/site.css" rel="stylesheet" />
    @RenderSection("Head", required: false)
</head>
<body>
    <header>
        <nav>
            <a asp-area="" asp-controller="Home" asp-action="Index">
                <img src="~/ssms-logo.png" alt="SSMS Logo" />
            </a>

            <ul>
                @if (User.Identity.IsAuthenticated)
                {
                    <li><a asp-controller="Users" asp-action="MyProfile">My Profile</a></li>

                    @if (User.IsInRole("3")) // Admin
                    {
                        <li><a asp-controller="Classes" asp-action="Index">Classes</a></li>
                        <li><a asp-controller="Materials" asp-action="Index">Materials</a></li>
                        <li><a asp-controller="Students" asp-action="Index">Students</a></li>
                        <li><a asp-controller="Teachers" asp-action="Index">Teachers</a></li>
                        <li><a asp-controller="Users" asp-action="Index">Users</a></li>
                    }
                    else if (User.IsInRole("2")) // Teacher
                    {
                        <li><a asp-controller="Marks" asp-action="Index">Marks</a></li>
                    }
                    else if (User.IsInRole("1")) // Student
                    {
                        <li><a asp-controller="Marks" asp-action="MyMarks">My Marks</a></li>
                    }
                }
            </ul>

            <div>
                @if (User.Identity.IsAuthenticated)
                {
                    <span>
                        Welcome, @User.Identity.Name!
                        (@(User.FindFirst(ClaimTypes.Role)?.Value switch
                        {
                            "1" => "Student",
                            "2" => "Teacher",
                            "3" => "Admin",
                            _ => "Unknown"
                        }))
                    </span>
                    <a asp-controller="Account" asp-action="Logout">Logout</a>
                }
                else
                {
                    <a asp-controller="Account" asp-action="Login">Login</a>
                }
            </div>
        </nav>
    </header>

    <main>
        <section>
            @RenderBody()
        </section>
    </main>

    <footer>
        <nav>
            <a asp-controller="Home" asp-action="Index">Home</a>
            <a asp-controller="Home" asp-action="Privacy">Privacy</a>
        </nav>
        <p>&copy; 2025 SSMS - School Management System</p>
    </footer>

    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
