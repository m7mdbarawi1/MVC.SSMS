@using Microsoft.AspNetCore.Authorization
@using System.Security.Claims

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SSMS</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <!-- Font Awesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

    @RenderSection("Head", required: false)
</head>
<body>
    <div class="d-flex flex-column min-vh-100">
        <header>
            <nav class="navbar navbar-expand-sm navbar-light border-bottom box-shadow mb-3">
                <div class="container-fluid">

                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                        <img src="~/ssms-logo.png" alt="SSMS Logo" style="height: 80px;" />
                    </a>

                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1">
                            @if (User.Identity.IsAuthenticated)
                                            {
                                <li class="nav-item"><a class="nav-link" asp-controller="Users" asp-action="MyProfile">My Profile</a></li>
                                if (User.IsInRole("3"))
                                {
                                    <li class="nav-item"><a class="nav-link" asp-controller="Classes" asp-action="Index">Classes</a></li>
                                    <li class="nav-item"><a class="nav-link" asp-controller="Materials" asp-action="Index">Materials</a></li>
                                    <li class="nav-item"><a class="nav-link" asp-controller="Students" asp-action="Index">Students</a></li>
                                    <li class="nav-item"><a class="nav-link" asp-controller="Teachers" asp-action="Index">Teachers</a></li>
                                    <li class="nav-item"><a class="nav-link" asp-controller="Users" asp-action="Index">Users</a></li>
                                }
                                else if (User.IsInRole("2"))
                                {
                                    <li class="nav-item"><a class="nav-link" asp-controller="Marks" asp-action="Index">Marks</a></li>
                                }
                                else if (User.IsInRole("1"))
                                {
                                    <li class="nav-item"><a class="nav-link" asp-controller="Marks" asp-action="MyMarks">My Marks</a></li>
                                }
                            }
                        </ul>

                        <div class="d-flex align-items-center gap-3">
                            @if (User.Identity.IsAuthenticated)
                            {
                                <span class="welcome-text">
                                    Welcome, @User.Identity.Name!
                                    (@(User.FindFirst(ClaimTypes.Role)?.Value switch
                                    {
                                        "1" => "Student",
                                        "2" => "Teacher",
                                        "3" => "Admin",
                                        _ => "Unknown"
                                    }))
                                </span>
                                <a class="btn btn-sm btn-outline-danger" asp-controller="Account" asp-action="Logout">Logout</a>
                            }
                            else
                            {
                                <a class="btn btn-sm btn-outline-primary" asp-controller="Account" asp-action="Login">Login</a>
                            }
                        </div>
                    </div>
                </div>
            </nav>
        </header>

        <main class="flex-grow-1">
            <div class="container pb-3">
                @RenderBody()
            </div>
        </main>

        <footer class="footer">
            <div class="container">
                <div class="footer-links">
                    <a asp-controller="Home" asp-action="Index">Home</a>
                    <a asp-controller="Home" asp-action="Privacy">Privacy</a>
                </div>

                <div class="footer-copyright">
                    &copy; 2025 SSMS - School Management System
                </div>
            </div>
        </footer>
    </div>

    <!-- JavaScript Libraries -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Custom Scripts -->
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>