@model SSMS.Models.Class

@{
    ViewData["Title"] = "Class Details";
}

<div class="page-container">
    <h1 class="section-title">Class Details</h1>

    <div class="card">
        <dl class="detail-list">
            <dt class="detail-term">@Html.DisplayNameFor(model => model.ClassNameArabic)</dt>
            <dd class="detail-description">@Html.DisplayFor(model => model.ClassNameArabic)</dd>

            <dt class="detail-term">@Html.DisplayNameFor(model => model.ClassNameEnglish)</dt>
            <dd class="detail-description">@Html.DisplayFor(model => model.ClassNameEnglish)</dd>
        </dl>
    </div>

    <div class="form-actions">
        <a asp-action="Edit" asp-route-id="@Model?.ClassId" class="btn btn-primary">Edit</a>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>
