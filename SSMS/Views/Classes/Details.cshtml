@model SSMS.Models.Class
<link href="~/css/classes/details.css" rel="stylesheet" />
@{
    ViewData["Title"] = "Class Details";
}

<div class="page-container" id="detailsClassPage">
    <h1 class="page-title">Class Details</h1>
    <h2 class="section-title">Class Information</h2>
    <hr />

    <dl class="details-group">
        <dt class="details-label">@Html.DisplayNameFor(model => model.ClassNameArabic)</dt>
        <dd class="details-value">@Html.DisplayFor(model => model.ClassNameArabic)</dd>

        <dt class="details-label">@Html.DisplayNameFor(model => model.ClassNameEnglish)</dt>
        <dd class="details-value">@Html.DisplayFor(model => model.ClassNameEnglish)</dd>
    </dl>

    <div class="action-buttons">
        <a asp-action="Edit"
           asp-route-id="@Model?.ClassId"
           class="btn btn-primary"
           id="editBtn">Edit</a>
        <a asp-action="Index" class="btn btn-secondary" id="backLink">Back to List</a>
    </div>
</div>
