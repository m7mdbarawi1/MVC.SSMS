@model SSMS.Models.Class

@{
    ViewData["Title"] = "Create Class";
}

<div class="page-container">
    <h1 class="section-title">Create New Class</h1>

    <form asp-action="Create" class="form">
        <div asp-validation-summary="ModelOnly" class="validation-summary"></div>

        <div class="form-group">
            <label asp-for="ClassId" class="form-label"></label>
            <input asp-for="ClassId" class="input-field" />
            <span asp-validation-for="ClassId" class="field-validation-error"></span>
        </div>

        <div class="form-group">
            <label asp-for="ClassNameArabic" class="form-label"></label>
            <input asp-for="ClassNameArabic" class="input-field" />
            <span asp-validation-for="ClassNameArabic" class="field-validation-error"></span>
        </div>

        <div class="form-group">
            <label asp-for="ClassNameEnglish" class="form-label"></label>
            <input asp-for="ClassNameEnglish" class="input-field" />
            <span asp-validation-for="ClassNameEnglish" class="field-validation-error"></span>
        </div>

        <div class="form-actions">
            <button type="submit" class="btn btn-primary">Create</button>
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </form>
</div>

@{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
