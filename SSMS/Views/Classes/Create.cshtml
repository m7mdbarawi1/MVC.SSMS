@model SSMS.Models.Class

@{
    ViewData["Title"] = "Create Class";
}

<main>
    <section>
        <h1>Create New Class</h1>

        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly"></div>

            <div>
                <label asp-for="ClassId"></label>
                <input asp-for="ClassId" />
                <span asp-validation-for="ClassId"></span>
            </div>

            <div>
                <label asp-for="ClassNameArabic"></label>
                <input asp-for="ClassNameArabic" />
                <span asp-validation-for="ClassNameArabic"></span>
            </div>

            <div>
                <label asp-for="ClassNameEnglish"></label>
                <input asp-for="ClassNameEnglish" />
                <span asp-validation-for="ClassNameEnglish"></span>
            </div>

            <div>
                <button type="submit">Create</button>
                <a asp-action="Index">Back to List</a>
            </div>
        </form>
    </section>
</main>

@{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
