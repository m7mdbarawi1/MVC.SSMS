@model SSMS.Models.Class

@{
    ViewData["Title"] = "Create";
}

<link href="~/css/classes/create.css" rel="stylesheet" />

<div class="create-container">
    <h1 class="create-title">Create</h1>
    <h4 class="create-subtitle">Class</h4>
    <hr />

    <div class="row">
        <div class="col-md-8">
            <form asp-action="Create" class="create-form">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="ClassId" class="control-label"></label>
                    <input asp-for="ClassId" class="form-control" />
                    <span asp-validation-for="ClassId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ClassNameArabic" class="control-label"></label>
                    <input asp-for="ClassNameArabic" class="form-control" />
                    <span asp-validation-for="ClassNameArabic" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ClassNameEnglish" class="control-label"></label>
                    <input asp-for="ClassNameEnglish" class="form-control" />
                    <span asp-validation-for="ClassNameEnglish" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Create" class="create-btn" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index" class="back-link">Back to List</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}