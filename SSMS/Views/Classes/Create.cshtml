@model SSMS.Models.Class
<link href="~/css/classes/create.css" rel="stylesheet" />
@{
    ViewData["Title"] = "Create Class";
}

<main class="page-container">
    <h1 class="section-title">Create Class</h1>
    <h2 class="form-subtitle">Class Details</h2>
    <hr />

    <form asp-action="Create" class="form-section">
        <div asp-validation-summary="ModelOnly" class="validation-summary"></div>

        <div class="form-group">
            <label asp-for="ClassId" class="form-label"></label>
            <input asp-for="ClassId" class="form-input" />
            <span asp-validation-for="ClassId" class="validation-message"></span>
        </div>

        <div class="form-group">
            <label asp-for="ClassNameArabic" class="form-label"></label>
            <input asp-for="ClassNameArabic" class="form-input" />
            <span asp-validation-for="ClassNameArabic" class="validation-message"></span>
        </div>

        <div class="form-group">
            <label asp-for="ClassNameEnglish" class="form-label"></label>
            <input asp-for="ClassNameEnglish" class="form-input" />
            <span asp-validation-for="ClassNameEnglish" class="validation-message"></span>
        </div>

        <div class="form-actions">
            <button type="submit" class="btn btn-primary">Create</button>
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </form>
</main>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
