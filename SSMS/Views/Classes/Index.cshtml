@model IEnumerable<SSMS.Models.Class>

@{
    ViewData["Title"] = "Classes";
}

<div class="page-container">
    <h1 class="section-title">Classes</h1>

    <div class="actions-bar">
        <a asp-action="Create" class="btn btn-primary">Create New</a>
        <input type="text" class="search-input" placeholder="Search classes by Arabic or English name..." />
    </div>

    <table class="data-table">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.ClassNameArabic)</th>
                <th>@Html.DisplayNameFor(model => model.ClassNameEnglish)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.ClassNameArabic)</td>
                    <td>@Html.DisplayFor(modelItem => item.ClassNameEnglish)</td>
                    <td>
                        <div class="action-links">
                            <a asp-action="Edit" asp-route-id="@item.ClassId" class="action-link">Edit</a>
                            <a asp-action="Details" asp-route-id="@item.ClassId" class="action-link">Details</a>
                            <a asp-action="Delete" asp-route-id="@item.ClassId" class="action-link delete">Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <script>
        document.querySelector(".search-input").addEventListener("keyup", function () {
            const filter = this.value.toLowerCase();
            const rows = document.querySelectorAll(".data-table tbody tr");

            rows.forEach(row => {
                const arabicName = row.cells[0].textContent.toLowerCase();
                const englishName = row.cells[1].textContent.toLowerCase();
                row.style.display = arabicName.includes(filter) || englishName.includes(filter) ? "" : "none";
            });
        });
    </script>
}
