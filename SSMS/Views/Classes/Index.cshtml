@model IEnumerable<SSMS.Models.Class>

@{
    ViewData["Title"] = "Index";
}

<link href="~/css/classes/index.css" rel="stylesheet" />

<div class="classes-container">
    <h1 class="classes-title">Classes</h1>

    <p>
        <a asp-action="Create" class="create-link">Create New</a>
    </p>

    <input type="text" id="classSearchInput" class="form-control mb-3" placeholder="Search classes by Arabic or English name..." />

    <table class="classes-table" id="classesTable">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.ClassNameArabic)</th>
                <th>@Html.DisplayNameFor(model => model.ClassNameEnglish)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.ClassNameArabic)</td>
                    <td>@Html.DisplayFor(modelItem => item.ClassNameEnglish)</td>
                    <td>
                        <div class="action-links">
                            <a asp-action="Edit" asp-route-id="@item.ClassId" class="action-link edit">Edit</a>
                            <a asp-action="Details" asp-route-id="@item.ClassId" class="action-link">Details</a>
                            <a asp-action="Delete" asp-route-id="@item.ClassId" class="action-link delete">Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<script>
    document.getElementById("classSearchInput").addEventListener("keyup", function () {
        const filter = this.value.toLowerCase();
        const rows = document.querySelectorAll("#classesTable tbody tr");

        rows.forEach(row => {
            const arabicName = row.cells[0].textContent.toLowerCase();
            const englishName = row.cells[1].textContent.toLowerCase();

            if (arabicName.includes(filter) || englishName.includes(filter)) {
                row.style.display = "";
            } else {
                row.style.display = "none";
            }
        });
    });
</script>
