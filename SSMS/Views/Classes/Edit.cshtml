@model SSMS.Models.Class

@{
    ViewData["Title"] = "Edit";
}

<link href="~/css/classes/edit.css" rel="stylesheet" />
<div class="edit-container">
    <h1 class="edit-title">Edit</h1>
    <h4 class="edit-subtitle">Class</h4>
    <hr />

    <form asp-action="Edit" class="edit-form">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="ClassId" />

        <div class="form-group">
            <label asp-for="ClassNameArabic" class="form-label"></label>
            <input asp-for="ClassNameArabic" class="form-control" />
            <span asp-validation-for="ClassNameArabic" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="ClassNameEnglish" class="form-label"></label>
            <input asp-for="ClassNameEnglish" class="form-control" />
            <span asp-validation-for="ClassNameEnglish" class="text-danger"></span>
        </div>

        <div class="edit-actions">
            <input type="submit" value="Save" class="save-btn" />
            <a asp-action="Index" class="back-link">Back to List</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}