@model SSMS.Models.Class

@{
    ViewData["Title"] = "Edit Class";
}

<div class="page-container">
    <h1 class="section-title">Edit Class</h1>

    <form asp-action="Edit" class="form">
        <div asp-validation-summary="ModelOnly" class="validation-summary"></div>
        <input type="hidden" asp-for="ClassId" />

        <div class="form-group">
            <label asp-for="ClassNameArabic" class="form-label"></label>
            <input asp-for="ClassNameArabic" class="input-field" />
            <span asp-validation-for="ClassNameArabic" class="validation-message"></span>
        </div>

        <div class="form-group">
            <label asp-for="ClassNameEnglish" class="form-label"></label>
            <input asp-for="ClassNameEnglish" class="input-field" />
            <span asp-validation-for="ClassNameEnglish" class="validation-message"></span>
        </div>

        <div class="form-actions">
            <input type="submit" value="Save" class="btn btn-primary" />
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </form>
</div>

@{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
