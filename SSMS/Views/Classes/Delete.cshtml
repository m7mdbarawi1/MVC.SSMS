@model SSMS.Models.Class

@{
    ViewData["Title"] = "Delete";
}

<link rel="stylesheet" href="~/css/Classes/Delete.css" />

<div class="delete-container">
    <h1 class="delete-title">Delete</h1>
    <h3 class="delete-confirmation">Are you sure you want to delete this?</h3>

    <div>
        <h4 class="delete-subtitle">Class</h4>
        <hr />

        <div class="delete-details">
            <dl class="row">
                <dt>@Html.DisplayNameFor(model => model.ClassNameArabic)</dt>
                <dd>@Html.DisplayFor(model => model.ClassNameArabic)</dd>

                <dt>@Html.DisplayNameFor(model => model.ClassNameEnglish)</dt>
                <dd>@Html.DisplayFor(model => model.ClassNameEnglish)</dd>
            </dl>
        </div>

        <form asp-action="Delete" class="delete-form">
            <input type="hidden" asp-for="ClassId" />
            <input type="submit" value="Delete" class="delete-btn" />
            <a asp-action="Index" class="back-link">Back to List</a>
        </form>
    </div>
</div>