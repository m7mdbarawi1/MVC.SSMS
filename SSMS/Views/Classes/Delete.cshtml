@model SSMS.Models.Class

@{
    ViewData["Title"] = "Delete Class";
}

<div class="page-container">
    <h1 class="page-title">Delete Class</h1>
    <h3 class="page-subtitle">Are you sure you want to delete this class?</h3>

    <section class="details-section">
        <h4 class="section-heading">Class Information</h4>
        <hr />
        <dl class="details-group">
            <dt>@Html.DisplayNameFor(model => model.ClassNameArabic)</dt>
            <dd>@Html.DisplayFor(model => model.ClassNameArabic)</dd>

            <dt>@Html.DisplayNameFor(model => model.ClassNameEnglish)</dt>
            <dd>@Html.DisplayFor(model => model.ClassNameEnglish)</dd>
        </dl>
    </section>

    <form asp-action="Delete">
        <input type="hidden" asp-for="ClassId" />
        <div class="form-actions">
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </form>
</div>
