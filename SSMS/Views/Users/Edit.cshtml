@model SSMS.Models.User
<link href="~/css/users/edit.css" rel="stylesheet" />
@{
    ViewData["Title"] = "Edit User";
}

<main class="page-container" id="editUserPage">
    <h1 class="page-title">Edit User</h1>
    <hr />

    <form asp-action="Edit" class="form-container" id="userForm">
        <div asp-validation-summary="ModelOnly" class="form-error"></div>
        <input type="hidden" asp-for="UserId" />

        <div class="form-group">
            <label asp-for="FullName" class="form-label"></label>
            <input asp-for="FullName" class="form-input" id="fullNameInput" />
            <span asp-validation-for="FullName" class="form-error"></span>
        </div>

        <div class="form-group">
            <label asp-for="UserName" class="form-label"></label>
            <input asp-for="UserName" class="form-input" id="usernameInput" />
            <span asp-validation-for="UserName" class="form-error"></span>
        </div>

        <div class="form-group">
            <label asp-for="Password" class="form-label"></label>
            <input asp-for="Password" class="form-input" id="passwordInput" />
            <span asp-validation-for="Password" class="form-error"></span>
        </div>

        <div class="form-group">
            <label asp-for="UserType" class="form-label"></label>
            <select asp-for="UserType" class="form-input" id="userTypeInput">
                <option value="">-- Select User Role --</option>
                <option value="1">Student</option>
                <option value="2">Teacher</option>
                <option value="3">Admin</option>
            </select>
            <span asp-validation-for="UserType" class="form-error"></span>
        </div>


        <div class="action-buttons">
            <input type="submit" value="Save" class="btn btn-primary" id="saveBtn" />
            <a asp-action="Index" class="btn btn-secondary back-link" id="backLink">Back to List</a>
        </div>
    </form>
</main>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
