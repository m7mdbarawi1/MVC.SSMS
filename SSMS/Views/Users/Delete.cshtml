@model SSMS.Models.User

@{
    ViewData["Title"] = "Delete User";
}

<div class="page-container">
    <h1 class="page-title">Delete User</h1>
    <h3 class="page-subtitle">Are you sure you want to delete this user?</h3>

    <section class="details-section">
        <h4 class="section-heading">User Details</h4>
        <hr />
        <dl class="details-group">
            <dt>@Html.DisplayNameFor(model => model.FullName)</dt>
            <dd>@Html.DisplayFor(model => model.FullName)</dd>

            <dt>@Html.DisplayNameFor(model => model.UserName)</dt>
            <dd>@Html.DisplayFor(model => model.UserName)</dd>

            <dt>@Html.DisplayNameFor(model => model.Password)</dt>
            <dd>@Html.DisplayFor(model => model.Password)</dd>

            <dt>@Html.DisplayNameFor(model => model.UserType)</dt>
            <dd>@Html.DisplayFor(model => model.UserType)</dd>
        </dl>
    </section>

    <form asp-action="Delete">
        <input type="hidden" asp-for="UserId" />
        <div class="form-actions">
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </form>
</div>
