@model SSMS.Models.User
<link href="~/css/users/details.css" rel="stylesheet" />
@{
    ViewData["Title"] = "User Details";
}

<div class="page-container" id="detailsUserPage">
    <h1 class="page-title">User Details</h1>
    <h2 class="section-title">Account Information</h2>
    <hr />

    <dl class="details-group">
        <dt class="details-label">@Html.DisplayNameFor(model => model.FullName)</dt>
        <dd class="details-value">@Html.DisplayFor(model => model.FullName)</dd>

        <dt class="details-label">@Html.DisplayNameFor(model => model.UserName)</dt>
        <dd class="details-value">@Html.DisplayFor(model => model.UserName)</dd>

        <dt class="details-label">@Html.DisplayNameFor(model => model.Password)</dt>
        <dd class="details-value">@Html.DisplayFor(model => model.Password)</dd>

        <dt class="details-label">@Html.DisplayNameFor(model => model.UserType)</dt>
        <dd class="details-value">@Html.DisplayFor(model => model.UserType)</dd>
    </dl>

    <div class="action-buttons">
        <a asp-action="Edit" asp-route-id="@Model?.UserId" class="btn btn-primary" id="editBtn">Edit</a>
        <a asp-action="Index" class="btn btn-secondary" id="backLink">Back to List</a>
    </div>
</div>
