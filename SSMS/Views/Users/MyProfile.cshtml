@model SSMS.Models.User
<link href="~/css/users/myprofile.css" rel="stylesheet" />
@{
    ViewData["Title"] = "My Profile";
}

<main class="page-container">
    <h2>My Profile</h2>

    @if (ViewBag.Success != null)
    {
        <div class="success-message">@ViewBag.Success</div>
    }

    <form asp-action="MyProfile" method="post">
        <input type="hidden" asp-for="UserId" />

        <div>
            <label asp-for="FullName"></label>
            <input asp-for="FullName" />
            <span asp-validation-for="FullName"></span>
        </div>

        <div>
            <label asp-for="UserName"></label>
            <input asp-for="UserName" />
            <span asp-validation-for="UserName"></span>
        </div>

        <div>
            <label asp-for="Password"></label>
            <input asp-for="Password" type="password" />
            <span asp-validation-for="Password"></span>
        </div>

        <div class="form-actions">
            <button type="submit" class="btn btn-primary">Update Profile</button>
        </div>
    </form>

    <form asp-action="DeleteMyAccount" method="post" class="form-actions">
        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete your account?');">
            Delete My Account
        </button>
    </form>
</main>
