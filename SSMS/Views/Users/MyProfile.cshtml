@model SSMS.Models.User

@{
    ViewData["Title"] = "My Profile";
}

<div class="page-container">
    <h2 class="section-title">My Profile</h2>

    @if (ViewBag.Success != null)
    {
        <div class="alert-success">@ViewBag.Success</div>
    }

    <form asp-action="MyProfile" method="post" class="form">
        <input type="hidden" asp-for="UserId" />

        <div class="form-group">
            <label asp-for="FullName" class="form-label"></label>
            <input asp-for="FullName" class="input-field" />
            <span asp-validation-for="FullName" class="validation-message"></span>
        </div>

        <div class="form-group">
            <label asp-for="UserName" class="form-label"></label>
            <input asp-for="UserName" class="input-field" />
            <span asp-validation-for="UserName" class="validation-message"></span>
        </div>

        <div class="form-group">
            <label asp-for="Password" class="form-label"></label>
            <input asp-for="Password" type="password" class="input-field" />
            <span asp-validation-for="Password" class="validation-message"></span>
        </div>

        <button type="submit" class="btn btn-primary">Update Profile</button>
    </form>

    <form asp-action="DeleteMyAccount" method="post" class="form mt-4">
        <button type="submit" class="btn btn-danger"
                onclick="return confirm('Are you sure you want to delete your account?');">
            Delete My Account
        </button>
    </form>
</div>
