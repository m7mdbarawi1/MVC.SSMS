@model SSMS.Models.User

@{
    ViewData["Title"] = "Create User";
}

<div class="page-container">
    <h1 class="section-title">Create User</h1>
    <hr />

    <form asp-action="Create" class="form">
        <div asp-validation-summary="ModelOnly" class="validation-summary text-danger"></div>

        <div class="form-group">
            <label asp-for="UserId" class="form-label"></label>
            <input asp-for="UserId" class="input-field" />
            <span asp-validation-for="UserId" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="FullName" class="form-label"></label>
            <input asp-for="FullName" class="input-field" />
            <span asp-validation-for="FullName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="UserName" class="form-label"></label>
            <input asp-for="UserName" class="input-field" />
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Password" class="form-label"></label>
            <input asp-for="Password" class="input-field" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="UserType" class="form-label"></label>
            <input asp-for="UserType" class="input-field" />
            <span asp-validation-for="UserType" class="text-danger"></span>
        </div>

        <div class="form-actions">
            <input type="submit" value="Create" class="btn btn-primary" />
            <a asp-action="Index" class="btn btn-outline">Back to List</a>
        </div>
    </form>
</div>

@{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
