@model SSMS.Models.User
<link href="~/css/users/create.css" rel="stylesheet" />
@{
    ViewData["Title"] = "Create User";
}

<main class="page-container">
    <h1 class="section-title">Create User</h1>
    <hr />

    <form asp-action="Create" class="form-section">
        <div asp-validation-summary="ModelOnly" class="validation-summary"></div>

        <div class="form-group">
            <label asp-for="UserId" class="form-label"></label>
            <input asp-for="UserId" class="form-input" />
            <span asp-validation-for="UserId" class="validation-message"></span>
        </div>

        <div class="form-group">
            <label asp-for="FullName" class="form-label"></label>
            <input asp-for="FullName" class="form-input" />
            <span asp-validation-for="FullName" class="validation-message"></span>
        </div>

        <div class="form-group">
            <label asp-for="UserName" class="form-label"></label>
            <input asp-for="UserName" class="form-input" />
            <span asp-validation-for="UserName" class="validation-message"></span>
        </div>

        <div class="form-group">
            <label asp-for="Password" class="form-label"></label>
            <input asp-for="Password" class="form-input" />
            <span asp-validation-for="Password" class="validation-message"></span>
        </div>

        <div class="form-group">
            <label asp-for="UserType" class="form-label"></label>
            <select asp-for="UserType" class="form-input">
                <option value="">-- Select User Role --</option>
                <option value="1">Student</option>
                <option value="2">Teacher</option>
                <option value="3">Admin</option>
            </select>
            <span asp-validation-for="UserType" class="validation-message"></span>
        </div>


        <div class="form-actions">
            <input type="submit" value="Create" class="btn btn-primary" />
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </form>
</main>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
