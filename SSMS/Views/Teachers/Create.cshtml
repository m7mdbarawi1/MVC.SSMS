@model SSMS.Models.Teacher

@{
    ViewData["Title"] = "Create Teacher";
}

<main>
    <h1>Create Teacher</h1>
    <h2>Teacher Details</h2>
    <hr />

    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly"></div>

        <div>
            <label asp-for="TeacherId"></label>
            <input asp-for="TeacherId" />
            <span asp-validation-for="TeacherId"></span>
        </div>

        <div>
            <label asp-for="UserId"></label>
            <select asp-for="UserId" asp-items="ViewBag.UserId"></select>
            <span asp-validation-for="UserId"></span>
        </div>

        <div>
            <label asp-for="MaterialId"></label>
            <select asp-for="MaterialId" asp-items="ViewBag.MaterialId"></select>
            <span asp-validation-for="MaterialId"></span>
        </div>

        <div>
            <label asp-for="Gender"></label>
            <input asp-for="Gender" />
            <span asp-validation-for="Gender"></span>
        </div>

        <div>
            <label asp-for="FullNameArabic"></label>
            <input asp-for="FullNameArabic" />
            <span asp-validation-for="FullNameArabic"></span>
        </div>

        <div>
            <label asp-for="FullNameEnglish"></label>
            <input asp-for="FullNameEnglish" />
            <span asp-validation-for="FullNameEnglish"></span>
        </div>

        <div>
            <input type="submit" value="Create" />
            <a asp-action="Index">Back to List</a>
        </div>
    </form>
</main>

@{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
