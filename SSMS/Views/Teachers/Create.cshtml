@model SSMS.Models.Teacher
<link href="~/css/teachers/create.css" rel="stylesheet" />
@{
    ViewData["Title"] = "Create Teacher";
}

<main class="page-container">
    <h1 class="section-title">Create Teacher</h1>
    <h2 class="form-subtitle">Teacher Details</h2>
    <hr />

    <form asp-action="Create" class="form-section">
        <div asp-validation-summary="ModelOnly" class="validation-summary"></div>

        <div class="form-group">
            <label asp-for="UserId" class="form-label"></label>
            <select asp-for="UserId" asp-items="ViewBag.UserId" class="form-select"></select>
            <span asp-validation-for="UserId" class="validation-message"></span>
        </div>

        <div class="form-group">
            <label asp-for="MaterialId" class="form-label"></label>
            <select asp-for="MaterialId" asp-items="ViewBag.MaterialId" class="form-select"></select>
            <span asp-validation-for="MaterialId" class="validation-message"></span>
        </div>

        <div class="form-group">
            <label asp-for="Gender" class="form-label"></label>
            <select asp-for="Gender" class="form-input">
                <option value="">-- Select Gender --</option>
                <option value="1">Male</option>
                <option value="0">Female</option>
            </select>
            <span asp-validation-for="Gender" class="validation-message"></span>
        </div>


        <div class="form-group">
            <label asp-for="FullNameArabic" class="form-label"></label>
            <input asp-for="FullNameArabic" class="form-input" />
            <span asp-validation-for="FullNameArabic" class="validation-message"></span>
        </div>

        <div class="form-group">
            <label asp-for="FullNameEnglish" class="form-label"></label>
            <input asp-for="FullNameEnglish" class="form-input" />
            <span asp-validation-for="FullNameEnglish" class="validation-message"></span>
        </div>

        <div class="form-actions">
            <input type="submit" value="Create" class="btn btn-primary" />
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </form>
</main>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
