@model SSMS.Models.Teacher

@{
    ViewData["Title"] = "Edit Teacher";
}

<div class="page-container">
    <h1 class="section-title">Edit Teacher</h1>
    <h4 class="section-subtitle">Teacher Details</h4>
    <hr />

    <form asp-action="Edit" class="form">
        <div asp-validation-summary="ModelOnly" class="validation-summary text-danger"></div>
        <input type="hidden" asp-for="TeacherId" />

        <div class="form-group">
            <label asp-for="UserId" class="form-label"></label>
            <select asp-for="UserId" asp-items="ViewBag.UserId" class="input-field"></select>
            <span asp-validation-for="UserId" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="MaterialId" class="form-label"></label>
            <select asp-for="MaterialId" asp-items="ViewBag.MaterialId" class="input-field"></select>
            <span asp-validation-for="MaterialId" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Gender" class="form-label"></label>
            <input asp-for="Gender" class="input-field" />
            <span asp-validation-for="Gender" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="FullNameArabic" class="form-label"></label>
            <input asp-for="FullNameArabic" class="input-field arabic-text" />
            <span asp-validation-for="FullNameArabic" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="FullNameEnglish" class="form-label"></label>
            <input asp-for="FullNameEnglish" class="input-field" />
            <span asp-validation-for="FullNameEnglish" class="text-danger"></span>
        </div>

        <div class="form-actions">
            <input type="submit" value="Save" class="btn btn-primary" />
            <a asp-action="Index" class="btn btn-outline">Back to List</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
